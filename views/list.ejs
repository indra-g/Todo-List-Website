<%- include("header"); -%>
<body>
  <div class="box" id="heading"><h1><%= todaysday %></h1></div>
  <div class="box">

    <% newiteminlist.forEach(function(element){ %>
      <form action="/delete" method="post">
      <div class="item">
      <input type="checkbox" name="checkbox" value="<%=element._id%> " onChange="this.form.submit()" />
      <p><%=element.name%></p>
      </div>
      <input type="hidden" name="listname" value="<%=todaysday%>"></input>
      </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input
        type="text"
        name="newItem"
        placeholder="New Item"
        autocomplete="off"
      /><button type="submit" name="button" value="<%=todaysday%>">+</button>
    </form>
  </div>
</body>
<%- include("footer"); -%>
